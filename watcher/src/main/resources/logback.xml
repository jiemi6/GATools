<configuration scan="true" scanPeriod="30 seconds" debug="false">
    <contextName>GATools</contextName>
	<property name="LOG_HOME" value="${user.dir}/log" />

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
    	<pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} %file:%line %thread C %level: %m%n</pattern>
    </encoder>
  </appender>
  
  <appender name="consoleFileLog"
		class="ch.qos.logback.core.rolling.RollingFileAppender" >
		<File>${LOG_HOME}/console.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LOG_HOME}/console.%d{yyyy-MM-dd}.%i
			</FileNamePattern>
			<MaxHistory>90</MaxHistory>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 50MB -->
				<maxFileSize>50MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} %file:%line %thread C %level : %m%n</pattern>
		</encoder>
	</appender>
  
  	<logger name="org" level="warn"/>
	<logger name="java.sql" level="warn"/>
	<logger name="com.mchange" level="warn"/>
	<logger name="io.netty" level="warn"/>
	 
	<logger name="org.apache.commons.beanutils" level="ERROR" />
	<logger name="org.dna.moquette.messaging.subscriptions" level="ERROR" />
	<logger name="org.apache.zookeeper" level="ERROR" />

	  
	    <root level="debug">
		<!--   不输出到控制台 -->
	    <appender-ref ref="console"/>  
	  </root>
	
	
</configuration>